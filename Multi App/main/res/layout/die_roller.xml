<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DieRoller"
    android:background="#87CEFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEFA"
        android:orientation="vertical"
        tools:context=".DieRoller">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="32dp"
                android:text="Roll a Dice!"
                android:textSize="26dp"
                />

            <ImageView
                android:id="@+id/dice_image1"
                android:layout_width="138dp"
                android:layout_height="123dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                app:srcCompat="@drawable/zero" />

            <ImageView
                android:id="@+id/dice_image2"
                android:layout_width="138dp"
                android:layout_height="123dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                app:srcCompat="@drawable/zero" />

            <Button
                android:id="@+id/die_roller_button_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:color/holo_red_dark"
                android:text="Roll Dice"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tip_calculator_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:color/holo_red_dark"
                android:text="Tip Calculator"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/random_number_generator_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:color/holo_red_dark"
                android:text="Back to Random Number Generator"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>